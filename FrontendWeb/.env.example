# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_API_TIMEOUT=30000

# Vite (frontend) API Configuration
VITE_API_URL=http://localhost:5000/api
VITE_API_TIMEOUT=15000

# Authentication
REACT_APP_JWT_SECRET=your_jwt_secret_here
REACT_APP_REFRESH_TOKEN_EXPIRY=7d
REACT_APP_ACCESS_TOKEN_EXPIRY=15m

# Payment Providers
REACT_APP_ORANGE_MONEY_API_KEY=your_orange_money_api_key
REACT_APP_MTN_MONEY_API_KEY=your_mtn_money_api_key
REACT_APP_MOMO_API_KEY=your_momo_api_key

# Feature Flags
REACT_APP_ENABLE_2FA=true
REACT_APP_ENABLE_PAYOUTS=true
REACT_APP_ENABLE_FRAUD_DETECTION=true

# Analytics
REACT_APP_ENABLE_ANALYTICS=true
